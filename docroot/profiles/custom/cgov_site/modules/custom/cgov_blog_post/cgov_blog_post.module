/**
 * Ajax callback.
 */
function set_blog_cats(array $form, FormStateInterface $form_state) {
  $term_name = 'Hello, world';
  $response = new AjaxResponse();
  $response->addCommand(new RemoveCommand('.dummy-label'));
  $response->addCommand(new AppendCommand('#edit-field-blog-topics', '<label class="dummy-label">' . $term_name . '</label>'));

  return $response;
}
