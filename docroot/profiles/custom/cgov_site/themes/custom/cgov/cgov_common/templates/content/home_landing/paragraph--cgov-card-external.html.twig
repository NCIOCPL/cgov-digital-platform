{% import '@cgov_common/card_macros.twig' as cardMacros %}

{# This needs to parallel the feature card template. However, we
 # get the title, description, image and URL from the paragraph fields.
 #}

{% set cardType = 'featureCard' %}

{% if 'thumbnail' in _context.theme_hook_suggestions[2] %}
  {% set cardType = 'thumbnailCard' %}
{% endif %}

{# ###### Setup Title ####### #}
{% set title = content.field_override_card_title[0] %}

{# ###### Setup Description ####### #}
{% set description = content.field_override_card_description[0] %}

{# ###### Setup URL ######## #}
{% set url = content.field_featured_url.uri %}

{# ###### Setup Img ######## #}
{% set image = content.field_image_promotional %}

{## Render Card ##}
{{ attribute(cardMacros, cardType, [title, description, image, url])}}
