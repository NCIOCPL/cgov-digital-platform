{#{{ attach_library('cgov_common/article') }}#}
{% import '@cgov_common/content_page_macros.twig' as contentPageMacros %}
<!-- ********************************* BEGIN Page Content ********************************** -->
<article>
  <div class="resize-content">
    <h1>
      <a href="{{ url }}">{{ node.label }}</a>
    </h1>
    {{ drupal_block('page_options') }}
    <div id="cgvBody">
      {#{{ contentPageMacros.displayDates(node, content) }}#}
      {{ content.field_date_posted }}
      {#{{ content.field_image_article }}#}
      {#{{ content.field_intro_text }}#}
      {#{{ content.field_article_body }}#}
    </div>
  </div>
  {# TODO: Article footer stuff has to go somewhere. TBD. #}
  {#<footer class="article-footer">#}
    {#{{ contentPageMacros.displayDates(node, content) }}#}
  {#</footer>#}
</article>
