{% import '@cgov_common/content_page_macros.twig' as contentPageMacros %}
<!-- ********************************* BEGIN Page Content ********************************** -->
<article>
  <div class="resize-content">
    {{ content.field_press_release_type }}
    <h1>
      {{ node.label }}
    </h1>
    <div id="nvcgSubTitle">
      <div class="subscribeRSS"><a class="blogRSS" href="https://public.govdelivery.com/accounts/USNIHNCI/subscriber/new"><span>Subscribe</span></a></div>
    </div>

    <div id="cgvBody">
      <!-- TODO: reuse existing date widget if possible. -->
      <!-- TODO: figure out why the ... trim() breaks. -->      
      <p class="blog-post-publishing-info">{{ content.field_date_posted }}, by {{ content.field_author }}</p>
      {{ content.field_image_article }}
      {{ content.field_intro_text }}
      {{ content.body }}
    </div>

    === Debug ===
    <div>
      {{ content.field_blog_series }}
      {{ content.field_blog_topics }}
    </div>
    === End debug ===

  </div>

  <footer class="article-footer">
    {{ content.field_citation }}
    {{ content.field_related_resources }}
    {% if node.field_public_use.value == '1' %}
      {{ drupal_region('public_use') }}
    {% endif %}
  </footer>
</article>
