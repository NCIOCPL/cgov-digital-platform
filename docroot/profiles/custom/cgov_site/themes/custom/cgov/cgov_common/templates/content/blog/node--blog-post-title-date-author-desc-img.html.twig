{% import '@cgov_common/content/blog/blog_macros.twig' as blogMacros %}
<!-- ********************** Blog Post List Item + Thumb ********************** -->
{% if content %}
  <li class="general-list-item general list-item">
    <div class="list-item-image image container">
        <a class="item-image image" href="{{ url }}">
          {{ blogMacros.getImage(content) }}
        </a>
    </div>
    <div class="title-and-desc title desc container">
        <a class="title" href="{{ url }}" onclick="">{{ label }}</a>
        <div class="description">
          <div class="date-author">
            {% spaceless %}{{ content.field_date_posted }}{% endspaceless %},
            {% trans with {'context':'CGov Blog'} %}by{% endtrans %}
            {{ blogMacros.getAuthor(content) }}
          </div>
          <p>{{ content.field_list_description }}</p>
          <p><a href="{{ url }}">{% trans with {'context':'CGov Blog'} %}Continue Reading{% endtrans %} &gt;</a></p>
        </div>
    </div>
  </li>
{% endif %}
