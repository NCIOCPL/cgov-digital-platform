<picture class="nci-card__image">
  {% set sourceAttribs = create_attribute({
      'media': '(min-width: 1024px)'
    }) 
  %}
  {% if content.field_ncids_promo_art_4x3[0] %}
    {% set sourceAttribs = sourceAttribs.setAttribute('srcset', content.field_ncids_promo_art_4x3[0]|render) %}
  {% elseif content.uri_4x3[0] %}
    {% set sourceAttribs = sourceAttribs.setAttribute('srcset', content.uri_4x3[0]|render) %}
  {% endif %}
  {% if sourceAttribs.srcset %}
    <source {{ sourceAttribs }}>
  {% endif %}
  {% if content.field_ncids_promo_art_16x9[0] %}
    {{ content.field_ncids_promo_art_16x9 }}
  {% else %}
    {{ content.field_media_image }}
  {% endif %}
</picture>