{{ attach_library('ncids_trans/blogSeries') }}

{{ page.ncids_banner }}
<!-- NOTIFICATIONS HERE -->
{{ page.ncids_header }}

<div id="page" class="grid-container">
  <div class="main-content" id="content">
    <div class="general-page-body-container collapse">
      {{ page.ncids_breadcrumb }}
      <div id="blogPageOptionsOuterContainer">
        {{ drupal_block('page_options') }}
      </div>

      <div class="grid-row grid-gap">
        {% if page.ncids_sidenav %}
          <div class="desktop:grid-col-3">
            {{ page.ncids_sidenav }}
          </div>
        {% endif %}
        <div class="legacy {% if page.ncids_sidenav %}desktop:grid-col-9{% else %}grid-col-12{% endif %}">
          <!-- Begin MAIN CONTENT AREA -->
          <main id="main-content">
            {{ page.content }}
          </main>
        </div>
      </div>
    </div>
  </div>
</div>

{{ page.ncids_footer }}
