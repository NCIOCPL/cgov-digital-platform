{% import '@cgov_common/listing/list_item_macros.twig' as listItemMacros %}

{% if content.field_external_link[0] %}

  {# ###### Setup Title ####### #}
  {% set title = content.field_override_title|field_value %}

  {# ###### Setup Description ####### #}
  {% set description = content.field_override_list_description|field_value %}

  {# ###### Setup Img ######## #}
  {% if content.field_override_image_promotional[0] %}
    {% set image = content.field_override_image_promotional %}
  {% endif %}

  {# ###### Setup the URL ###### #}
  {% set url = content.field_external_link[0]['#url'] %}

  {# ###### Setup the External Link Display ###### #}
  {% set external_link_option = content['#paragraph'].field_external_link_display.value %}

  {## Render List Item ##}
  {{ listItemMacros.list_item_title_desc_image(title, description, image, url, true, external_link_option = 'default' ) }}
{% endif %}
