{% import '@ncids_trans/layout/page_options_macros.twig' as pageOptionsMacros %}

{{ attach_library('ncids_trans/ncids-trans-common') }}

{{ page.ncids_banner }}
{{ page.ncids_site_alerts }}
{{ page.ncids_header }}

<div class="grid-container">
	<div class="grid-row flex-no-wrap">
		<div
			class="grid-col-10">
			{{ page.ncids_breadcrumb }}
		</div>
		{{ pageOptionsMacros.page_options("top") }}
	</div>
</div>

<div id="page" class="grid-container">
	<div class="grid-row grid-gap">
		{{ page.ncids_sidenav }}
		<div class="{% if page.ncids_sidenav %}desktop:grid-col-9{% else %}grid-col-12{% endif %}">
			<main class="cgdp-main-content" id="main-content">
				{{ page.content }}
			</main>
		</div>
		<div class="desktop:grid-col-9 desktop:grid-offset-3">
			{{ pageOptionsMacros.page_options("bottom") }}
		</div>
	</div>
</div>

{{ page.ncids_footer }}
