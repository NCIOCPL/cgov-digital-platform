{% import '@ncids_trans/listing/list_item_macros.twig' as listItemMacros %}

{% if content.field_external_link[0] %}

  {# ###### Setup Title ####### #}
  {% set title = content.field_override_title|field_value %}

  {# ###### Setup Description ####### #}
  {% set description = content.field_override_list_description|field_value %}

  {# ###### Setup Img ######## #}
  {% if content.field_override_image_promotional[0] %}
    {% set image = content.field_override_image_promotional %}
  {% endif %}

  {# ###### Setup the URL ###### #}
  {% set url = content.field_external_link[0]['#url'] %}
    {# ###### Setup the External Link Option ###### #}
  {% set external_link_display = paragraph.field_external_link_display.value %}
  {## Render List Item ##}
  {{ listItemMacros.ncids_list_macro(title, description, url, "Title, Description, and Image", image, external_link_display) }}
{% endif %}
