<div class="cgdp-article-footer-citation">
	<div>
    <h2 class="nci-heading-h3">
      {% if items|length == 1 %}
        {% trans %}
          Selected Reference
        {% endtrans %}
      {% else %}
        {% trans %}
          Selected References
        {% endtrans %}
      {% endif %}
    </h2>
    <ol class="cgdp-article-footer-citation__citations">
      {% for item in items %}
        <li id="r{{ loop.index }}">
          {{ item.content }}
        </li>
      {% endfor %}
    </ol>
	</div>
</div>
