<div id="cgvCitationSl">
	<div>
    <h2 class="cgvCitationSl__heading">
      {% if items|length == 1 %}
        {% trans %}
          Selected Reference
        {% endtrans %}
      {% else %}
        {% trans %}
          Selected References
        {% endtrans %}
      {% endif %}
    </h2>
    <ol class="article-citation">
      {% for item in items %}
        <li id="r{{ loop.index }}">
          {{ item.content }}
        </li>
      {% endfor %}
    </ol>
	</div>
</div>
