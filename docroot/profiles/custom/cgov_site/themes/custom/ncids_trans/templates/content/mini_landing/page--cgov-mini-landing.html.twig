{# CHANGE THIS TO ncids-global when updateing for ncids #}
{{ attach_library('ncids_trans/ncids-global') }}
{% import '@ncids_trans/layout/page_options_macros.twig' as pageOptionsMacros %}

{{ page.ncids_banner }}
{{ page.ncids_site_alerts }}
{{ page.ncids_header }}

{# Hide this block on print #}
<div class="grid-container">
  <div class="grid-row flex-no-wrap">
    <div class="grid-col-10">
      {# What if no breadcrumbs? #}
      {{ page.ncids_breadcrumb }}
    </div>
    {{ pageOptionsMacros.page_options("top") }}
  </div>
</div>

<div id="page" class="grid-container">
  {# This is not a NCIDS class. It should be in legacy. #}
  {# Killed general-page-body-container #}
  <div class="grid-row grid-gap">
    {{ page.ncids_sidenav }}
    <div class="cgdpl {% if page.ncids_sidenav %}desktop:grid-col-9{% else %}grid-col-12{% endif %}">
      {# This content div is to support a lot of legacy JS #}
      <div id="content" class="{{ page_type }}">
        <main class="contentzone has-section-nav" id="main-content">
          {{ page.content }}
        </main>
      </div>
      {{ pageOptionsMacros.page_options("bottom") }}
    </div>
  </div>
</div>

{{ page.ncids_footer }}
