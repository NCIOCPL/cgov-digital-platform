{{ attach_library('ncids_trans/ncids-global') }}
{{ attach_library('ncids_trans/blogs') }}
{% import '@ncids_trans/layout/page_options_macros.twig' as pageOptionsMacros %}

{{ page.ncids_banner }}
{{ page.ncids_site_alerts }}
{{ page.ncids_header }}

{# Hide this block on print #}
<div class="grid-container">
  <div class="grid-row flex-no-wrap">
    <div class="grid-col-10">
      {# What if no breadcrumbs? #}
      {{ page.ncids_breadcrumb }}
    </div>
    {{ pageOptionsMacros.page_options("top") }}
  </div>
</div>

<div id="page" class="grid-container">
  <div class="grid-row grid-gap">
    {# This template kinds follows page.html.twig, except our content item
       actually holds the side rail and the mail contents. So look at
       layout--cgov-blog to see the main content and the right rail.
    #}
    {{ page.content }}
  </div>
</div>

{{ page.ncids_footer }}
