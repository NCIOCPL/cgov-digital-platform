<div id="cgvCitationSl">
	<div>
    <h2 class="cgvCitationSl__heading">
      {% if items|length == 1 %}
        {% trans with {'context': 'CGov Press Release' } %}
          Reference
        {% endtrans %}
      {% else %}
        {% trans with {'context': 'CGov Press Release' } %}
          References
        {% endtrans %}
      {% endif %}
    </h2>
    <ol class="article-citation">
      {#} {% set citation_list_number = 1 %}#}
      {% for item in items %}
        <li id="r{{ loop.index }}">
          {{ item.content }}
          {#{% set citation_list_number = citation_list_number + 1 %}#}
        </li>
      {% endfor %}
    </ol>
	</div>
</div>
