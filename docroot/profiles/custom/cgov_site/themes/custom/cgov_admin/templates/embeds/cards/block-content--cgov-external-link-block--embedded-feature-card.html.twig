{% import '@ncids_trans/cards/ncids_card_macros.twig' as cardMacros %}

{# ###### Setup Title ####### #}
{% set title = content.field_override_card_title|field_value %}

{# ####### Set description ###### #}
{% set description = content.field_override_card_description|field_value %}

{# ####### Set Image ######## #}
{% if content.field_override_image_promotional|field_value %}
	{% set image = content.field_override_image_promotional|field_value %}
{% endif %}

{# ###### Setup URL ######## #}
{% set url = content.field_featured_url[0]['#url'] %}

{% set id = block_content.id()|clean_unique_id %}

<div class="cgdp-embed-card">
	<div class="nci-card">
		{{ cardMacros.ncidsFeatureCard(title, description, image, url, directory, id, 'block_content', 'External') }}
	</div>
</div>
